
{
    "env": {
      "node": true,
      "es6": true,
      "es2017": true, 
      "browser": true
    },
    
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    
    "extends": [
      "sanity/react", 
      "next", 
      "next/core-web-vitals", 
      "plugin:@next/next/import/recommended", 
      "eslint:recommended",
      "plugin:eslint-plugin/recommended",
      "plugin:import/recommended",
      "plugin:react/recommended"
    ],
  
    "root": true,
    "plugins": [
        "eslint-plugin",
        "import",
        "react", 
        "@next/next"
    ],
    
    "rules": {
    "import/no-unresolved": ["error", { "commonjs": true, "amd": true }],
    "import/named": "error",
    "import/namespace": "error",
    "import/default": "error",
    "import/export": "error"},
    // etc...
  
    "settings": {
      "react": {
        "version": "detect" // Automatically detect React version
      }
    }
  }